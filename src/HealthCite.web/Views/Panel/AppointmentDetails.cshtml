@model HealthCite.Domain.Entities.Citas
@{
    ViewData["Title"] = "HealthCite-DetallesCitas";
    Layout = "_LayoutForPanel";
}
<div class="container-fluid">
    <h1 class="mt-4 text-center">CITAS RESERVADAS</h1>
    
    <br />

    <div class="bg-dark w-100 p-3 border-3 border rounded-3">
        <div class="border-bottom d-flex justify-content-between text-light">
            <p>NOMBRE: </p>
            <p>@Model.Nombre</p>
        </div>

        <div class="border-bottom d-flex justify-content-between text-light">
            <p>C0RREO ELECTRONICO: </p>
            <p>@Model.CorroElectronico</p>
        </div>

        <div class="border-bottom d-flex justify-content-between text-light mb-2">
            <p>FECHA DE RESERVACION: </p>
            <p>@Model.FechaCita</p>
        </div>

        <div class="d-flex justify-content-between text-light">
            <a class="btn btn-warning" asp-action="AppointmentPanel">RETROCEDER</a>
            <form asp-action="AppointmentDetails">
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <button class="btn btn-danger"  type="submit">ELIMINAR</button>
            </form>
        </div>

    </div>
    
    <br />
    <br />

</div>
