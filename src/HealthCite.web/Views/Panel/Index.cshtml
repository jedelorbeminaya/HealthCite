@{
    ViewData["Title"] = "HealthCite-FormAdminPanel";
    Layout = "_LayoutWithOutHeader";
}

<div class="container bg-white w-50 mt-5 p-3">
    <div class="text-center">
        <h2 class="pt-1 fw-bold">HealthCITE</h2>
        <h6 class="fw-normal">¡ADMIN PANEL!</h6>
        <hr class="border border-warning border-3 opacity-75">
    </div>
    <form class="container" asp-action="AdminPanel">

        <label for="user">USUARIO:</label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="user">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                </svg>
            </span>
            <input type="text" class="form-control" aria-label="Username" aria-describedby="user">
        </div>

        <label for="password">CONTRASEÑA:</label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="password">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
                </svg>
            </span>
            <input type="password" class="form-control" aria-label="password" aria-describedby="password">
        </div>

        <div class="text-center">
            <p class="fs-6"><a class="nav-link text-warning fw-bold" href="#">¿HA OLVIDADO SU CONTRASEÑA DE ACCESO?</a></p>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
            <input class="form-control btn-warning fw-bold" type="submit" value="ACCEDER" name="submit" />
        </div>
    </form>
</div>
<br />
